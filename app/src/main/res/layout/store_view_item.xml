<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight=".3">
            <ImageView
                android:id="@+id/beer_imgview_store_view_item"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:background="@color/colorPrimaryDark"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/beer_title_store_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test beer type"/>

            <TextView
                android:id="@+id/beer_price_store_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$23.00 MXN"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_add_store_view_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_toLeftOf="@id/beer_amount_text_view_store_view_item"
                android:layout_alignTop="@id/beer_amount_text_view_store_view_item"
                android:src="@drawable/ic_add_green_24dp" />

            <TextView
                android:id="@+id/beer_amount_text_view_store_view_item"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:text="0"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/button_remove_store_view_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_toRightOf="@id/beer_amount_text_view_store_view_item"
                android:layout_alignTop="@id/beer_amount_text_view_store_view_item"
                android:src="@drawable/ic_remove_red_24dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>